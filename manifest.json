{
  "manifest_version": 3,
  "name": "The Greatest Suspender",
  "version": "1.0",
  "description": "Reclaim Chrome's memory! The Greatest Suspender auto/manually suspends inactive tabs, boosting performance",
  "homepage_url": "https://github.com/zaid-lol/The-Greatest-Suspender"
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png"
    }
  },
  "options_page": "options.html",
  "background": {
    "service_worker": "background.js"
  },
  "permissions": [
    "tabs",
    "storage",
    "contextMenus",
    "scripting"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "commands": {
    "suspend-current-tab": {
      "suggested_key": {
        "default": "Ctrl+Shift+S",
        "mac": "Command+Shift=S"
      },
      "description": "Suspend the current tab"
    }
  },
  "web_accessible_resources": [
    {
      "resources": [ "suspended.html" ],
      "matches": [ "<all_urls>" ]
    }
  ]
}
